{
    "name": "mentos",
    "private": true,
    "packageManager": "yarn@3.6.0",
    "workspaces": {
        "packages": [
            "./services/*",
            "./packages/*",
            "./clis/*",
            "./templates/*"
        ]
    },
    "devDependencies": {
        "husky": ">=6",
        "lint-staged": ">=10",
        "pinst": ">=2",
        "prettier": "^2.8.8",
        "prettier-plugin-tailwindcss": "^0.3.0",
        "typescript": "^5.1.6"
    },
    "lint-staged": {
        "{services,packages}/**/*.{js,ts,jsx,tsx}": "prettier --write"
    },
    "scripts": {
        "postinstall": "husky install",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable",
        "new-package": "yarn workspace @cli/template start"
    },
    "dependenciesMeta": {
        "@prisma/client@4.15.0": {
            "unplugged": true
        },
        "prisma@4.15.0": {
            "unplugged": true
        }
    }
}
